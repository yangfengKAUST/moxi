<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moxi.dao.HourseMapper">

    <select id="selectHouseByArea" resultType="com.moxi.pojo.house.HouseInfo" resultMap="HouseInfoMap">
        select * from lianjia.xiaoqu
        where area = #{area}
        and city = #{city}
        and date = #{date}
        and price > 0
    </select>


    <select id="selectHouseByXiaoqu" resultType="com.moxi.pojo.house.HouseInfo" resultMap="HouseInfoMap">
        SELECT * from lianjia.xiaoqu
        where xiaoqu = #{xiaoqu}
        and city = #{city}
        and date = #{date}
        and price > 0
    </select>

    <resultMap type="com.moxi.pojo.house.HouseInfo" id="HouseInfoMap">
        <result property="id" column="id"></result>
        <result property="city" column="city"></result>
        <result property="date" column="date"></result>
        <result property="district" column="district"></result>
        <result property="area" column="area"></result>
        <result property="xiaoqu" column="xiaoqu"></result>
        <result property="price" column="price"></result>
        <result property="sale" column="sale"></result>
    </resultMap>

</mapper>
